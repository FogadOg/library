<div class="bg-blue-500">
    <div class="drawer lg:drawer-open">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content bg-white h-full lg:rounded-l-2xl">
            <%= yield %>
        </div>
        <div class="drawer-side group duration-300 transition-all">
            <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>


            <ul class="menu bg-blue-500 text-2xl md:text-3xl font-semibold flex items-start gap-8 h-full w-60 lg:w-30 group-hover:w-72 transition-all duration-300 p-4 text-white">
                <li class="flex items-center justify-center h-2/6 w-full">
                    <div class="py-20 transition-all duration-300 h-full flex items-center justify-center">
                        <img class="h-28 md:h-12 group-hover:h-full transition-all duration-300" alt="rubynor logo hvite forenklet" src="<%= asset_path('Rubynor_logo_200x200.png') %>" />
                    </div>
                </li>
                <div class="h-2/8 w-full">
                    <li class="w-full px-2">
                        <%= link_to books_path, class: "w-full flex items-center justify-center space-x-2 text-white" do %>
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="white" class="bi bi-house" viewBox="0 0 16 16">
                                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                                </svg>
                            </span>
                            <p class="lg:hidden group-hover:inline">Books</p>
                        <% end %>
                    </li>
                    <li class="w-full px-2">
                        <%= link_to wishes_path, class: "w-full flex items-center justify-center space-x-2 text-white" do %>
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2"/>
                                </svg>
                            </span>
                            <p class="lg:hidden group-hover:inline">Wishlist</p>
                        <% end %>
                    </li>

                </div>

                <div class="h-2/6 w-full flex flex-col justify-end">
                    <li class="w-full">
                        <%= link_to new_book_path, class: "w-full flex items-center justify-center text-white text-sm" do %>
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                |<path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                                </svg>
                            </span>
                            <p class="lg:hidden group-hover:inline">Add book</p>
                        <% end %>
                    </li>
                    <li class="w-full">
                        <%= link_to new_wish_path, class: "w-full flex items-center justify-center text-white text-sm" do %>
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark" viewBox="0 0 16 16">
                                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"/>
                                </svg>
                            </span>
                            <p class="lg:hidden group-hover:inline">Add Wish</p>
                        <% end %>
                    </li>
                </div>

            </ul>
        </div>
    </div>
</div>



